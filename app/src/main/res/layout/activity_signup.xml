<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/LoginScreen"
        tools:context="com.example.navyaspc.helpneedy.SignupActivity">

        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/userpic"/>

        <ImageButton
            android:id="@+id/pencilImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/userImageView"
            android:layout_marginTop="100dp"
            android:src="@drawable/edit_pencil"/>

        <EditText
            android:id="@+id/nameEditTest"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/userImageView"
            android:layout_marginTop="30dp"
            android:background="@color/White"
            android:hint="Name"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/emailEditTest"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nameEditTest"
            android:layout_marginTop="5dp"
            android:hint="Email"
            android:textSize="15dp"
            android:background="@color/White"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/passworEditTest"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/emailEditTest"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textSize="15dp"
            android:background="@color/White"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/confirmEditTest"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/passworEditTest"
            android:layout_marginTop="5dp"
            android:hint="Confirm Password"
            android:textSize="15dp"
            android:background="@color/White"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/mobileEditTest"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirmEditTest"
            android:layout_marginTop="5dp"
            android:hint="Mobile Number (Optional)"
            android:textSize="15dp"
            android:background="@color/White"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/Signupbutton"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mobileEditTest"
            android:layout_marginTop="20dp"
            android:background="@color/loginbutton"
            android:text="Sign up"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:textColor="@color/themeColor"/>

</RelativeLayout>


