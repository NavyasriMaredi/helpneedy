<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/LoginScreen"
    tools:context="com.example.navyaspc.helpneedy.LoginActivity">


    <EditText
        android:id="@+id/Emailedittest"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:fontFamily="sans-serif"
        android:background="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/Passwordedittest"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:background="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:layout_below="@id/Emailedittest"
        />

  <Button
      android:id="@+id/Loginbutton"
      android:layout_width="match_parent"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_height="40dp"
      android:text="Login"
      android:background="@color/loginbutton"
      android:layout_centerHorizontal="true"
      android:textSize="15sp"
      android:textColor="@color/themeColor"
      android:layout_below="@id/Passwordedittest"
      android:layout_marginTop="30dp"
      android:onClick="LoginButton" />

    <TextView
        android:id="@+id/orEditTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Loginbutton"
        android:layout_marginTop="20dp"
        android:text="@string/or"
        android:textSize="15dp"
        android:textColor="@color/White"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/leftlineTextView"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="1dp"
        android:layout_toLeftOf="@+id/orEditTest"
        android:layout_below="@+id/Loginbutton"
        android:layout_marginTop="30dp"
        android:layout_marginRight="9dp"
        android:background="@color/White"/>

    <TextView
        android:id="@+id/rightlineTextView"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/orEditTest"
        android:layout_below="@id/Loginbutton"
        android:layout_marginTop="30dp"
        android:background="@color/White"
        android:layout_marginLeft="9dp"/>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/orEditTest"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/fbImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/gglImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/google" />

    </LinearLayout>

    <Button
        android:id="@+id/Signupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-3dp"
        android:text="@string/Sign_up_now"
        android:textSize="15sp"
        android:textColor="@color/White"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:background="@color/trasparent"
        android:onClick="signupButton" />


    <Button
        android:id="@+id/forgotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:text="Forgot Password?"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif"
        android:textColor="@color/White"
        android:background="@color/trasparent"/>


</RelativeLayout>
